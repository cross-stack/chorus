{
  "name": "chorus-extension",
  "displayName": "Chorus",
  "description": "Evidence-first code review and context discovery",
  "version": "0.1.0",
  "publisher": "chorus",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chorus.openPanel",
        "title": "Open Chorus Panel",
        "category": "Chorus"
      },
      {
        "command": "chorus.addEvidence",
        "title": "Add Evidence Block",
        "category": "Chorus"
      },
      {
        "command": "chorus.submitFirstPass",
        "title": "Submit First-Pass Review",
        "category": "Chorus"
      }
    ],
    "keybindings": [
      {
        "command": "chorus.openPanel",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "better-sqlite3": "^8.7.0",
    "glob": "^10.3.0"
  }
}