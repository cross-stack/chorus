{
  "name": "chorus-extension",
  "displayName": "Chorus - Evidence-first Code Review",
  "description": "Evidence-first code review extension for VS Code/Positron",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chorus.showPanel",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chorus.showPanel",
        "title": "Show Chorus Panel",
        "category": "Chorus"
      },
      {
        "command": "chorus.addEvidence",
        "title": "Add Chorus Evidence Block",
        "category": "Chorus"
      },
      {
        "command": "chorus.reindexWorkspace",
        "title": "Reindex Workspace",
        "category": "Chorus"
      },
      {
        "command": "chorus.showIndexStatus",
        "title": "Show Index Status",
        "category": "Chorus"
      },
      {
        "command": "chorus.quickSubmitBallot",
        "title": "Submit Ballot (Quick)",
        "category": "Chorus"
      },
      {
        "command": "chorus.focusContextView",
        "title": "Focus Context View",
        "category": "Chorus"
      },
      {
        "command": "chorus.showContextPeek",
        "title": "Show Context Peek",
        "category": "Chorus"
      },
      {
        "command": "chorus.viewContextItem",
        "title": "View Context Item",
        "category": "Chorus"
      },
      {
        "command": "chorus.viewPRBallots",
        "title": "View PR Ballots",
        "category": "Chorus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chorus-sidebar",
          "title": "Chorus",
          "icon": "$(organization)"
        }
      ]
    },
    "views": {
      "chorus-sidebar": [
        {
          "id": "chorus.contextView",
          "name": "Context Discovery",
          "when": "chorus.enabled"
        }
      ]
    },
    "keybindings": [
      {
        "command": "chorus.quickSubmitBallot",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "chorus.addEvidence",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "chorus.focusContextView",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "sql.js": "^1.13.0"
  }
}
